<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Left column: texts + actions -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Title"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Subtitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/btnPrev"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/skip_previous_24px" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/play_arrow_24px"/>

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/skip_next_24px"/>

            <!-- Toggle desktop lyrics (show/hide) -->
            <ImageButton
                android:id="@+id/btnToggleOverlay"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/lyrics_24px"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Right: small cover -->
    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:contentDescription="cover"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>
